<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context="com.example.adrin.proyecto_centro_estetico.InformacionActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_informacion"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/PopupOverlay"
            app:titleTextColor="@color/white">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <!--LLAMAR-->
    <TextView
        android:id="@+id/text_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/telf"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_telf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:enabled="false"
            android:text="615834632"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/botonLlamar"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:background="@android:drawable/toast_frame"
            android:backgroundTint="@android:color/holo_green_light"
            app:srcCompat="@android:drawable/ic_menu_call" />

    </LinearLayout>

    <!--CORREO-->
    <TextView
        android:id="@+id/text_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Correo:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/correo_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:enabled="false"
            android:text="beautyavenuecenter@gmail.com"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/botonCorreo"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:background="@android:drawable/toast_frame"
            android:backgroundTint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    </LinearLayout>


    <!--LOCALIZACION-->
    <TextView
        android:id="@+id/text_localizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="LocalizaciÃ³n:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loclizacion_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:text="Calle de Chile, 10, 28016 Madrid"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/botonLocalizacion"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:background="@android:drawable/toast_frame"
            android:backgroundTint="@android:color/holo_red_dark"
            app:srcCompat="@android:drawable/ic_dialog_map"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="416dp" />

    </LinearLayout>

</LinearLayout>

