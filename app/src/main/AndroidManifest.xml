<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adrin.proyecto_centro_estetico">

    <!-- Nos permite conectarnos a una base de datos remota, en nuestro caso PostgreSQL -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Sirve para acceder al calendario del movil -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <!-- Sirve para acceder al almacenamiento del movil -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".PedirCitaActivity"
            android:label="@string/app_pedir_cita"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResumenCitaActivity"
            android:label="@string/app_resumen_cita"
            android:theme="@style/AppTheme.DialogPers" />
        <activity
            android:name=".InicioActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".DescripcionActivity"
            android:label="@string/app_descripcion"
            android:theme="@style/AppTheme.DialogPers" />
        <!-- LOGIN -->
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistroUser" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfigActivity"
            android:label="@string/app_config" />
        <activity
            android:name=".CrearTratamientoActivity"
            android:label="@string/app_crear_tratamiento" />
        <activity
            android:name=".BorrarTratamientoActivity"
            android:label="@string/app_borrar_tratamiento" />
    </application>

</manifest>